{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/services/*": [
        "src/services/*"
      ],
      "@/context/*": [
        "src/context/*"
      ],
      "@/customHooks/*": [
        "src/customHooks/*"
      ],
      "@/mockData/*": [
        "src/mockData/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/ui/*": [
        "src/components/ui/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}